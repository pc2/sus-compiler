}


module FIFO_ #(T, int MAY_PUSH_LATENCY) {
    assert #(C: MAY_PUSH_LATENCY >= 0)

    domain clk
    action rst'0 {}

    domain write
    trigger may_push'-MAY_PUSH_LATENCY
    action push'0 : T push_data'0 {}

    domain read
    trigger may_pop'0
    action pop'0 : -> T pop_data'0 {}
}

